<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:TimeForBattle.Model"
             xmlns:viewmodel="clr-namespace:TimeForBattle.ViewModel"
             xmlns:converters="clr-namespace:TimeForBattle.Converters"
             x:DataType="viewmodel:MainMenuViewModel"
             x:Class="TimeForBattle.View.MainMenuPage"
             Title="{Binding Title}">

    <Grid ColumnDefinitions="*,Auto,*"
          ColumnSpacing="0"
          RowDefinitions="*,Auto,Auto,Auto,Auto,*">
        <Button Grid.Column="1"
                Grid.Row="1"
                Text="New Encounter"
                Command="{Binding NewCombatCommand}"
                Style="{StaticResource BaseButton}" />
        <Border Grid.Column="1"
                Grid.Row="2"
                Grid.RowSpan="1"
                Stroke="DarkRed"
                StrokeThickness="2"
                IsVisible="{Binding IsNamingNewCombat}">
            <Grid Grid.Column="1"
                  Grid.Row="2"
                  ColumnDefinitions="5,Auto,Auto,5"
                  ColumnSpacing="0"
                  RowDefinitions="5,Auto,Auto,Auto,Auto,5">
                <Label Grid.Column="1"
                       Grid.ColumnSpan="2"
                       Grid.Row="2"
                       Text="New Encounter Name:"
                       HorizontalTextAlignment="Center" />
                <Editor Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="3"
                        Text="{Binding NewCombatName}"
                        AutoSize="TextChanges"
                        MaxLength="64" />
                <Button Grid.Column="1"
                        Grid.Row="4"
                        Text="OK"
                        Command="{Binding AddCombatCommand}"
                        Style="{StaticResource BaseButton}" />
                <Button Grid.Column="2"
                        Grid.Row="4"
                        Text="Cancel"
                        Command="{Binding CancelNewCombatCommand}"
                        Style="{StaticResource BaseButton}" />
            </Grid>
        </Border>
        <Button Grid.Column="1"
                Grid.Row="3"
                Text="Load Encounter"
                Command="{Binding GoToCombatListPageCommand}"
                Style="{StaticResource BaseButton}" />
        <Button Grid.Column="1"
                Grid.Row="4"
                Text="Manage Creatures"
                Command="{Binding GoToCreatureListCommand}"
                Style="{StaticResource BaseButton}" />
    </Grid>
</ContentPage>