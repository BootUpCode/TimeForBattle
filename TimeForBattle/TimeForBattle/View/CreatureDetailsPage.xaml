<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TimeForBattle.ViewModel"
             xmlns:converters="clr-namespace:TimeForBattle.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="TimeForBattle.View.CreatureDetailsPage"
             x:DataType="viewmodel:CreatureDetailsViewModel"
             Title="{Binding Creature.Name}">
    <ContentPage.Resources>
        <converters:AttributeConverter x:Key="AttributeConverter" />
        <converters:InitiativeConverter x:Key="initiative" />
        <converters:StringContainDataConverter x:Key="StringContainDataConverter" />
        <converters:NotStringContainDataConverter x:Key="NotStringContainDataConverter" />
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*,*"
          ColumnSpacing="0"
          RowDefinitions="*,50">
        <ScrollView Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="0">
            <Grid Margin="10"
                  ColumnDefinitions="*,*,*,*,*,*"
                  RowDefinitions="Auto,Auto,5,Auto,Auto,Auto,10,Auto,Auto,Auto,10,Auto,Auto,Auto,Auto,Auto,Auto,Auto,10,Auto,Auto,Auto,Auto,Auto,Auto,5,Auto,Auto,Auto,5,Auto,Auto,Auto,5,Auto,Auto,Auto,5,Auto,Auto,Auto,5,Auto,Auto,Auto,5,Auto,Auto,Auto">


                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="0"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.Name}"
                       FontSize="20"
                       FontAttributes="Bold" />
                <BoxView Grid.Column="0"
                         Grid.ColumnSpan="6"
                         Grid.Row="1"
                         HeightRequest="2"
                         Color="DarkRed" />

                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="3"
                       TextColor="Gray"
                       FontAttributes="Italic">
                    <Label.Text>
                        <MultiBinding StringFormat="{} {0} {1}, {2}">
                            <Binding Path="Creature.Size" />
                            <Binding Path="Creature.Type" />
                            <Binding Path="Creature.Alignment" />
                        </MultiBinding>
                    </Label.Text>
                </Label>

                <Label Grid.Column="0"
                       Grid.ColumnSpan="1"
                       Grid.Row="7"
                       Style="{StaticResource StatblockText}"
                       Text="AC"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Grid.ColumnSpan="1"
                       Grid.Row="7"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.ArmorClass}"
                       WidthRequest="40"
                       MinimumWidthRequest="40"
                       HorizontalOptions="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="1"
                       Grid.Row="8"
                       Style="{StaticResource StatblockText}"
                       Text="HP "
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Grid.ColumnSpan="1"
                       Grid.Row="8"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.MaximumHitPoints}"
                       WidthRequest="40"
                       MinimumWidthRequest="40"
                       HorizontalOptions="Start"
                       VerticalOptions="Center" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="1"
                       Grid.Row="9"
                       Style="{StaticResource StatblockText}"
                       Text="CR "
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Grid.ColumnSpan="1"
                       Grid.Row="9"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.ChallengeRating}"
                       WidthRequest="40"
                       MinimumWidthRequest="40"
                       HorizontalOptions="Start" />
                <Label Grid.Column="2"
                       Grid.ColumnSpan="3"
                       Grid.Row="7"
                       Style="{StaticResource StatblockText}"
                       Text="Proficiency Bonus"
                       FontAttributes="Bold" />
                <Label Grid.Column="4"
                       Grid.ColumnSpan="1"
                       Grid.Row="7"
                       Style="{StaticResource StatblockEntry}"
                       Text="{Binding Creature.ProficiencyBonus, StringFormat='+{0}'}"
                       HorizontalOptions="End" />
                <Label Grid.Column="2"
                       Grid.ColumnSpan="3"
                       Grid.Row="8"
                       Style="{StaticResource StatblockText}"
                       Text="Initiative Bonus"
                       FontAttributes="Bold" />
                <Label Grid.Column="4"
                       Grid.ColumnSpan="1"
                       Grid.Row="8"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.InitiativeBonus, StringFormat='+{0}'}"
                       HorizontalOptions="End" />
                <Label Grid.Column="2"
                       Grid.ColumnSpan="1"
                       Grid.Row="9"
                       Style="{StaticResource StatblockText}"
                       Text="Speed "
                       FontAttributes="Bold" />
                <Label Grid.Column="3"
                       Grid.ColumnSpan="2"
                       Grid.Row="9"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.Speed}"
                       HorizontalOptions="End"/>

                <Label Grid.Column="2"
                       Grid.Row="11"
                       HorizontalOptions="Center"
                       Text="MOD"
                       Style="{StaticResource SmallLabel}"
                       TextColor="Grey" />
                <Label Grid.Column="3"
                       Grid.Row="11"
                       HorizontalOptions="Center"
                       Text="SAVE"
                       Style="{StaticResource SmallLabel}"
                       TextColor="Grey" />

                <Label Grid.Column="0"
                       Grid.Row="12"
                       Style="{StaticResource StatblockText}"
                       Text="STR"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Grid.Row="12"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.StrScore}" />
                <Label Grid.Column="2"
                       Grid.Row="12"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.StrScore" />
                            <Binding Path="IsSave"
                                     FallbackValue="False" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
                <Label Grid.Column="3"
                       Grid.Row="12"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.StrScore" />
                            <Binding Path="Creature.StrSaveProf" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>

                <Label Grid.Column="0"
                       Grid.Row="13"
                       Style="{StaticResource StatblockText}"
                       Text="DEX"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Grid.Row="13"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.DexScore}" />
                <Label Grid.Column="2"
                       Grid.Row="13"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.DexScore" />
                            <Binding Path="IsSave"
                                     FallbackValue="False" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
                <Label Grid.Column="3"
                       Grid.Row="13"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.DexScore" />
                            <Binding Path="Creature.DexSaveProf" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>

                <Label Grid.Column="0"
                       Grid.Row="14"
                       Style="{StaticResource StatblockText}"
                       Text="CON"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Grid.Row="14"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.ConScore}" />
                <Label Grid.Column="2"
                       Grid.Row="14"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.ConScore" />
                            <Binding Path="IsSave"
                                     FallbackValue="False" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
                <Label Grid.Column="3"
                       Grid.Row="14"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.ConScore" />
                            <Binding Path="Creature.ConSaveProf" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>

                <Label Grid.Column="0"
                       Grid.Row="15"
                       Style="{StaticResource StatblockText}"
                       Text="INT"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Grid.Row="15"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.IntScore}" />
                <Label Grid.Column="2"
                       Grid.Row="15"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.IntScore" />
                            <Binding Path="IsSave"
                                     FallbackValue="False" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
                <Label Grid.Column="3"
                       Grid.Row="15"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.IntScore" />
                            <Binding Path="Creature.IntSaveProf" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>

                <Label Grid.Column="0"
                       Grid.Row="16"
                       Style="{StaticResource StatblockText}"
                       Text="WIS"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Grid.Row="16"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.WisScore}" />
                <Label Grid.Column="2"
                       Grid.Row="16"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.WisScore" />
                            <Binding Path="IsSave"
                                     FallbackValue="False" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
                <Label Grid.Column="3"
                       Grid.Row="16"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.WisScore" />
                            <Binding Path="Creature.WisSaveProf" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>

                <Label Grid.Column="0"
                       Grid.Row="17"
                       Style="{StaticResource StatblockText}"
                       Text="CHA"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Grid.Row="17"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.ChaScore}" />
                <Label Grid.Column="2"
                       Grid.Row="17"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.ChaScore" />
                            <Binding Path="IsSave"
                                     FallbackValue="False" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
                <Label Grid.Column="3"
                       Grid.Row="17"
                       HorizontalOptions="Center"
                       Style="{StaticResource StatblockText}">
                    <Label.Text>
                        <MultiBinding Converter="{StaticResource AttributeConverter}">
                            <Binding Path="Creature.ChaScore" />
                            <Binding Path="Creature.ChaSaveProf" />
                            <Binding Path="Creature.ProficiencyBonus" />
                        </MultiBinding>
                    </Label.Text>
                </Label>

                <Label Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="19"
                       IsVisible="{Binding Creature.Skills, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="Skills"
                       VerticalOptions="Start"
                       FontAttributes="Bold" />
                <Label Grid.Column="2"
                       Grid.ColumnSpan="4"
                       Grid.Row="19"
                       IsVisible="{Binding Creature.Skills, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.Skills}"
                       VerticalTextAlignment="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="20"
                       IsVisible="{Binding Creature.Vulnerabilities, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="Vulnerabilities"
                       VerticalOptions="Start"
                       FontAttributes="Bold" />
                <Label Grid.Column="2"
                       Grid.ColumnSpan="4"
                       Grid.Row="20"
                       IsVisible="{Binding Creature.Vulnerabilities, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.Vulnerabilities}"
                       VerticalTextAlignment="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="21"
                       Style="{StaticResource StatblockText}"
                       IsVisible="{Binding Creature.Resistances, Converter={StaticResource StringContainDataConverter}}"
                       Text="Resistances"
                       VerticalOptions="Start"
                       FontAttributes="Bold" />
                <Label Grid.Column="2"
                       Grid.ColumnSpan="4"
                       Grid.Row="21"
                       IsVisible="{Binding Creature.Resistances, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.Resistances}"
                       VerticalTextAlignment="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="22"
                       IsVisible="{Binding Creature.Immunities, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="Immunities"
                       VerticalOptions="Start"
                       FontAttributes="Bold" />
                <Label Grid.Column="2"
                       Grid.ColumnSpan="4"
                       Grid.Row="22"
                       IsVisible="{Binding Creature.Immunities, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.Immunities}"
                       VerticalTextAlignment="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="23"
                       IsVisible="{Binding Creature.Senses, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="Senses"
                       VerticalOptions="Start"
                       FontAttributes="Bold" />
                <Label Grid.Column="2"
                       Grid.ColumnSpan="4"
                       Grid.Row="23"
                       IsVisible="{Binding Creature.Senses, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.Senses}"
                       VerticalTextAlignment="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Grid.Row="24"
                       IsVisible="{Binding Creature.Languages, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="Languages"
                       VerticalOptions="Start"
                       FontAttributes="Bold" />
                <Label Grid.Column="2"
                       Grid.ColumnSpan="4"
                       Grid.Row="24"
                       IsVisible="{Binding Creature.Languages, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       Text="{Binding Creature.Languages}"
                       VerticalTextAlignment="Start" />

                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="26"
                       Text="Roll Hotkeys"
                       Style="{StaticResource StatblockText}"
                       FontSize="20"
                       Padding="0,10,0,0" />
                <BoxView Grid.Column="0"
                         Grid.ColumnSpan="6"
                         Grid.Row="27"
                         HeightRequest="2"
                         Color="DarkRed" />
                <Grid Grid.Column="0"
                      Grid.ColumnSpan="6"
                      Grid.Row="28"
                      RowDefinitions="Auto, Auto, Auto"
                      ColumnDefinitions="2*,*,2*">
                    <Label Grid.Column="0"
                           Grid.Row="0"
                           HorizontalOptions="Start"
                           Text="NAME"
                           Style="{StaticResource SmallLabel}"
                           TextColor="Grey" />
                    <Label Grid.Column="1"
                           Grid.Row="0"
                           HorizontalOptions="Start"
                           Text="BONUS"
                           Style="{StaticResource SmallLabel}"
                           TextColor="Grey" />
                    <Label Grid.Column="2"
                           Grid.Row="0"
                           HorizontalOptions="Start"
                           Text="DAMAGE"
                           Style="{StaticResource SmallLabel}"
                           TextColor="Grey" />
                    <Label Grid.Column="0"
                           Grid.Row="1"
                           Style="{StaticResource StatblockText}"
                           Text="{Binding Creature.HotKey1Name}"
                           IsVisible="{Binding Creature.HotKey1Name, Converter={StaticResource StringContainDataConverter}}"
                           HorizontalOptions="Start" />
                    <Label Grid.Column="1"
                           Grid.Row="1"
                           HorizontalOptions="Start"
                           Style="{StaticResource StatblockText}"
                           IsVisible="{Binding Creature.HotKey1Name, Converter={StaticResource StringContainDataConverter}}">
                        <Label.Text>
                            <MultiBinding Converter="{StaticResource AttributeConverter}">
                                <Binding Path="Creature.HotKey1Attribute" />
                                <Binding Path="Creature.HotKey1Proficiency" />
                                <Binding Path="Creature.ProficiencyBonus" />
                                <Binding Path="Creature" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                    <Label Grid.Column="2"
                           Grid.Row="1"
                           HorizontalOptions="Start"
                           Style="{StaticResource StatblockText}"
                           IsVisible="{Binding Creature.HotKey1Name, Converter={StaticResource StringContainDataConverter}}">
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0}d{1} + {2} {3}">
                                <Binding Path="Creature.HotKey1DamageDiceNumber" />
                                <Binding Path="Creature.HotKey1DamageDiceSize" />
                                <Binding Path="Creature.HotKey1DamageBonus" />
                                <Binding Path="Creature.HotKey1DamageType" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                    <Label Grid.Column="0"
                           Grid.Row="2"
                           Style="{StaticResource StatblockText}"
                           Text="{Binding Creature.HotKey2Name}"
                           IsVisible="{Binding Creature.HotKey2Name, Converter={StaticResource StringContainDataConverter}}"
                           HorizontalOptions="Start" />
                    <Label Grid.Column="1"
                           Grid.Row="2"
                           HorizontalOptions="Start"
                           Style="{StaticResource StatblockText}"
                           IsVisible="{Binding Creature.HotKey2Name, Converter={StaticResource StringContainDataConverter}}">
                        <Label.Text>
                            <MultiBinding Converter="{StaticResource AttributeConverter}">
                                <Binding Path="Creature.HotKey2Attribute" />
                                <Binding Path="Creature.HotKey2Proficiency" />
                                <Binding Path="Creature.ProficiencyBonus" />
                                <Binding Path="Creature" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                    <Label Grid.Column="2"
                           Grid.Row="2"
                           HorizontalOptions="Start"
                           Style="{StaticResource StatblockText}"
                           IsVisible="{Binding Creature.HotKey2Name, Converter={StaticResource StringContainDataConverter}}">
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0}d{1} + {2} {3}">
                                <Binding Path="Creature.HotKey2DamageDiceNumber" />
                                <Binding Path="Creature.HotKey2DamageDiceSize" />
                                <Binding Path="Creature.HotKey2DamageBonus" />
                                <Binding Path="Creature.HotKey2DamageType" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                </Grid>

                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="30"
                       Text="Traits"
                       IsVisible="{Binding Creature.Traits, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       FontSize="20" />
                <BoxView Grid.Column="0"
                         Grid.ColumnSpan="6"
                         Grid.Row="31"
                         IsVisible="{Binding Creature.Traits, Converter={StaticResource StringContainDataConverter}}"
                         HeightRequest="2"
                         Color="DarkRed" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="32"
                       IsVisible="{Binding Creature.Traits, Converter={StaticResource StringContainDataConverter}}"
                       Text="{Binding Creature.Traits}"
                       VerticalTextAlignment="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="34"
                       Text="Actions"
                       IsVisible="{Binding Creature.Actions, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       FontSize="20" />
                <BoxView Grid.Column="0"
                         Grid.ColumnSpan="6"
                         Grid.Row="35"
                         IsVisible="{Binding Creature.Actions, Converter={StaticResource StringContainDataConverter}}"
                         HeightRequest="2"
                         Color="DarkRed" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="36"
                       IsVisible="{Binding Creature.Actions, Converter={StaticResource StringContainDataConverter}}"
                       Text="{Binding Creature.Actions}"
                       VerticalTextAlignment="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="38"
                       Text="Bonus Actions"
                       IsVisible="{Binding Creature.BonusActions, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       FontSize="20" />
                <BoxView Grid.Column="0"
                         Grid.ColumnSpan="6"
                         Grid.Row="39"
                         IsVisible="{Binding Creature.BonusActions, Converter={StaticResource StringContainDataConverter}}"
                         HeightRequest="2"
                         Color="DarkRed" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="40"
                       IsVisible="{Binding Creature.BonusActions, Converter={StaticResource StringContainDataConverter}}"
                       Text="{Binding Creature.BonusActions}"
                       VerticalTextAlignment="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="42"
                       Text="Reactions"
                       IsVisible="{Binding Creature.Reactions, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       FontSize="20" />
                <BoxView Grid.Column="0"
                         Grid.ColumnSpan="6"
                         Grid.Row="43"
                         IsVisible="{Binding Creature.Reactions, Converter={StaticResource StringContainDataConverter}}"
                         HeightRequest="2"
                         Color="DarkRed" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="44"
                       IsVisible="{Binding Creature.Reactions, Converter={StaticResource StringContainDataConverter}}"
                       Text="{Binding Creature.Reactions}"
                       VerticalTextAlignment="Start" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="46"
                       Text="Legendary Actions"
                       IsVisible="{Binding Creature.LegendaryActions, Converter={StaticResource StringContainDataConverter}}"
                       Style="{StaticResource StatblockText}"
                       FontSize="20" />
                <BoxView Grid.Column="0"
                         Grid.ColumnSpan="6"
                         Grid.Row="47"
                         IsVisible="{Binding Creature.LegendaryActions, Converter={StaticResource StringContainDataConverter}}"
                         HeightRequest="2"
                         Color="DarkRed" />
                <Label Grid.Column="0"
                       Grid.ColumnSpan="6"
                       Grid.Row="48"
                       IsVisible="{Binding Creature.LegendaryActions, Converter={StaticResource StringContainDataConverter}}"
                       Text="{Binding Creature.LegendaryActions}"
                       VerticalTextAlignment="Start" />
            </Grid>
        </ScrollView>
        
        <Button Grid.Column="0"
                Grid.Row="1"
                Text="Return"
                Command="{Binding ReturnCommand}"
                BorderColor="Black"
                CornerRadius="0"
                Style="{StaticResource BaseButton}" />
        <Button Grid.Column="1"
                Grid.Row="1"
                Text="Edit"
                Command="{Binding GoToEditCommand}"
                BorderColor="Black"
                CornerRadius="0"
                Style="{StaticResource BaseButton}" />
    </Grid>

</ContentPage>